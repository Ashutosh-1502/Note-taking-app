<% layout('layouts/boilerplate4')%>
    <div class="container bg-light rounded py-4 mt-5" style="width: 50%;">
        <h1 class="text-center mt-1">Register Now</h1>
        <form class="row g-4 needs-validation d-flex justify-content-center mt-5" action="/auth/register" method="POST"
            novalidate>
            <div class="col-md-5">
                <label for="firstName" class="form-label">First name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-5">
                <label for="lastName" class="form-label">Last name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-10">
                <label for="username" class="form-label">Username</label>
                <div class="input-group has-validation">
                    <input type="text" class="form-control" id="username" aria-describedby="inputGroupPrepend"
                        name="username" required>
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <label for="password" class="form-label">Password</label>
                <div class="input-group has-validation">
                    <input type="password" class="form-control" id="password" aria-describedby="inputGroupPrepend"
                        name="password" required>
                    <div class="invalid-feedback">
                        Please choose a password.
                    </div>
                </div>
            </div>
            <div class="col-10 d-flex justify-content-end">
                <button class="btn btn-primary" type="submit">Register Now</button>
            </div>
            <div class="col-10">
                <p class="text-center">Already have Account ?  <a href="/auth/login">Login Here</a></p>
            </div>
        </form>
    </div>